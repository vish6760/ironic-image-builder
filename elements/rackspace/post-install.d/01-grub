#!/bin/bash

# Enable debugging mode based on a condition
if [ 0 -gt 0 ]; then
    set -x
else
    set -v
fi

# Ensure the script exits on error
set -eu
set -o pipefail

# Determine if the OS is RedHat-based (CentOS)
isRH=0
if [[ -f /etc/redhat-release ]]; then
    grep -Ei 'CentOS|Red Hat' /etc/redhat-release &>/dev/null && isRH=1
elif [[ -f /etc/os-release ]]; then
    grep -Ei 'CentOS|Red Hat' /etc/os-release &>/dev/null && isRH=1
fi

# Set bootloader parameters based on OS type
if [ $isRH -eq 1 ]; then
    export DIB_BOOTLOADER_DEFAULT_CMDLINE="rdblacklist=bfa,lpfc nomodeset console=tty0 console=ttyS1,115200n8 audit=1 audit_backlog_limit=8192 rd.shell=0 rd.debug=0 rd.auto=1 net.ifnames=0 biosdevname=0"
else
    export DIB_BOOTLOADER_DEFAULT_CMDLINE="modprobe.blacklist=bfa,lpfc nomodeset console=tty0 console=ttyS1,115200n8 audit=1 audit_backlog_limit=8192 net.ifnames=0 biosdevname=0"
fi

# Apply the bootloader changes to /etc/default/grub
echo "DIB_BOOTLOADER_DEFAULT_CMDLINE: $DIB_BOOTLOADER_DEFAULT_CMDLINE"

if [ $isRH -eq 1 ]; then
    if [[ -f /etc/default/grub ]]; then
        sed -i "s|^\(GRUB_CMDLINE_LINUX=\).*|\1\"${DIB_BOOTLOADER_DEFAULT_CMDLINE}\"|" /etc/default/grub
        echo -n "Applied changes: " && grep GRUB_CMDLINE_LINUX /etc/default/grub
        grub2-mkconfig -o /boot/grub2/grub.cfg  # ✅ Regenerate GRUB for CentOS
    fi
else
    if [[ -f /etc/default/grub ]]; then
        sed -i "s|^\(GRUB_CMDLINE_LINUX_DEFAULT=\).*|\1\"${DIB_BOOTLOADER_DEFAULT_CMDLINE}\"|" /etc/default/grub
        echo -n "Applied changes: " && grep GRUB_CMDLINE_LINUX_DEFAULT /etc/default/grub
        update-grub  # ✅ Regenerate GRUB for Ubuntu
    fi
fi

echo $?

